<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:gravity="right">
    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/scrollView" android:layout_weight="3">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:id="@+id/textView" android:textSize="24dp" android:paddingBottom="24dp"/>
    </ScrollView>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp" android:layout_gravity="left|center_vertical" android:layout_weight="1">
        <Button
                android:textSize="36dp" android:paddingTop="0px"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="C"
                android:id="@+id/button"/>
        <Button
                android:textSize="36dp" android:paddingTop="0px"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="&lt;="
                android:id="@+id/button1"/>
        <Button
                android:textSize="36dp" android:paddingTop="0px"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="()"
                android:id="@+id/button2"/>
        <Button
                android:textSize="36dp" android:paddingTop="0px"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="/"
                android:id="@+id/button3" android:clickable="false" android:enabled="false" android:focusable="false"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp" android:layout_gravity="left|center_vertical" android:layout_weight="1">
        <Button
                android:textSize="36dp" android:paddingTop="0px"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="7"
                android:id="@+id/button4"/>
        <Button
                android:textSize="36dp" android:paddingTop="0px"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="8"
                android:id="@+id/button5"/>
        <Button
                android:textSize="36dp" android:paddingTop="0px"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="9"
                android:id="@+id/button6"/>
        <Button
                android:textSize="36dp" android:paddingTop="0px"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="*"
                android:id="@+id/button7" android:clickable="false" android:enabled="false"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp" android:layout_gravity="left|center_vertical" android:layout_weight="1">
        <Button
                android:textSize="36dp" android:paddingTop="0px"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="4"
                android:id="@+id/button8"/>
        <Button
                android:textSize="36dp" android:paddingTop="0px"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="5"
                android:id="@+id/button9"/>
        <Button
                android:textSize="36dp" android:paddingTop="0px"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="6"
                android:id="@+id/button10"/>
        <Button
                android:textSize="36dp" android:paddingTop="0px"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="-"
                android:id="@+id/button11"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp" android:layout_gravity="left|center_vertical" android:layout_weight="1">
        <Button
                android:textSize="36dp" android:paddingTop="0px"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="1"
                android:id="@+id/button12"/>
        <Button
                android:textSize="36dp" android:paddingTop="0px"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="2"
                android:id="@+id/button13"/>
        <Button
                android:textSize="36dp" android:paddingTop="0px"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="3"
                android:id="@+id/button14"/>
        <Button
                android:textSize="36dp" android:paddingTop="0px"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="+"
                android:id="@+id/button15"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp" android:layout_gravity="left|center_vertical" android:layout_weight="1">
        <Button
                android:textSize="36dp" android:paddingTop="0px"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="0"
                android:id="@+id/button16"/>
        <Button
                android:textSize="36dp" android:paddingTop="0px"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="."
                android:id="@+id/button17"/>
        <Button
                android:textSize="36dp" android:paddingTop="0px"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:text="="
                android:id="@+id/button18"/>
    </LinearLayout>
</LinearLayout>

