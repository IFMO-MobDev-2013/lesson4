<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@drawable/calculator">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_gravity="center_horizontal|top"
            android:layout_weight="1.7" android:layout_marginLeft="30dp" android:layout_marginRight="30dp"
            android:layout_marginTop="25dp" android:layout_marginBottom="15dp" android:weightSum="1">
        <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView" android:layout_gravity="right|bottom" android:src="@drawable/wrongop"/>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/expression"
                    android:textSize="26dp"
                    android:textColor="#000000"
                    android:scrollbars="vertical"/>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_gravity="center_horizontal|bottom"
            android:layout_weight="1" android:layout_marginLeft="15dp" android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp" android:layout_marginTop="5dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:layout_gravity="center_horizontal|top"
                android:layout_weight="1">
            <Button android:layout_width="wrap_content" android:layout_height="fill_parent" android:text="."
                    android:id="@+id/point" android:layout_weight="1" android:background="@drawable/orange_button_custom"
                    android:layout_marginRight="10dp" android:layout_marginLeft="10dp" android:textColor="#000000"
                    android:textSize="30dp"/>
            <Button android:layout_width="wrap_content" android:layout_height="fill_parent" android:text="&lt;="
                    android:id="@+id/back" android:layout_weight="1" android:background="@drawable/orange_button_custom"
                    android:layout_marginLeft="0dp" android:layout_marginRight="10dp" android:textColor="#000000"
                    android:textSize="26dp"/>
            <Button android:layout_width="wrap_content" android:layout_height="fill_parent" android:text="C"
                    android:id="@+id/erase" android:layout_weight="1" android:background="@drawable/orange_button_custom"
                    android:layout_marginRight="15dp" android:textColor="#000000" android:textSize="26dp"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="="
                    android:id="@+id/equal" android:layout_weight="1" android:background="@drawable/orange_button_custom"
                    android:layout_marginLeft="10dp" android:textColor="#000000" android:textSize="26dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:layout_gravity="center_horizontal|top"
                android:layout_weight="1" android:layout_marginTop="5dp">
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="7"
                    android:id="@+id/seven" android:layout_weight="1" android:background="@drawable/blue_button_custom"
                    android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginTop="0dp"
                    android:textColor="#000000" android:textSize="26dp"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="8"
                    android:id="@+id/eight" android:layout_gravity="center" android:layout_weight="1" android:background="@drawable/blue_button_custom"
                    android:layout_marginRight="10dp" android:layout_marginLeft="0dp" android:layout_marginTop="0dp"
                    android:textColor="#000000" android:textSize="26dp"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="9"
                    android:id="@+id/nine" android:layout_gravity="center" android:layout_weight="1" android:background="@drawable/blue_button_custom"
                    android:layout_marginRight="15dp" android:layout_marginTop="0dp" android:textColor="#000000"
                    android:textSize="26dp"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="*"
                    android:id="@+id/mul" android:layout_gravity="center" android:layout_weight="1" android:background="@drawable/green_button_custom"
                    android:layout_marginLeft="10dp" android:textColor="#000000" android:textSize="26dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:layout_gravity="center_horizontal|top"
                android:layout_weight="1" android:layout_marginTop="5dp">
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="4"
                    android:id="@+id/four" android:layout_gravity="center" android:layout_weight="1" android:background="@drawable/blue_button_custom"
                    android:layout_marginRight="10dp" android:layout_marginLeft="10dp" android:layout_marginTop="0dp"
                    android:textColor="#000000" android:textSize="26dp"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:id="@+id/five" android:layout_gravity="center" android:layout_weight="1" android:background="@drawable/blue_button_custom"
                    android:layout_marginLeft="0dp" android:layout_marginRight="10dp" android:layout_marginTop="0dp"
                    android:textColor="#000000" android:textSize="26dp"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="6"
                    android:id="@+id/six" android:layout_gravity="center_horizontal|top" android:layout_weight="1" android:background="@drawable/blue_button_custom"
                    android:layout_marginRight="15dp" android:layout_marginTop="0dp" android:textColor="#000000"
                    android:textSize="26dp"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="/"
                    android:id="@+id/div" android:layout_gravity="center" android:layout_weight="1" android:background="@drawable/green_button_custom"
                    android:layout_marginLeft="10dp" android:textColor="#000000" android:textSize="26dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:layout_gravity="center_horizontal|top"
                android:layout_weight="1" android:layout_marginTop="5dp">
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="1"
                    android:id="@+id/one" android:layout_gravity="center" android:layout_weight="1" android:background="@drawable/blue_button_custom"
                    android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginTop="0dp"
                    android:textColor="#000000" android:textSize="26dp"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="2"
                    android:id="@+id/two" android:layout_gravity="center_horizontal|bottom" android:layout_weight="1" android:background="@drawable/blue_button_custom"
                    android:layout_marginRight="10dp" android:layout_marginLeft="0dp" android:layout_marginTop="0dp"
                    android:textColor="#000000" android:textSize="26dp"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="3"
                    android:id="@+id/three" android:layout_weight="1" android:background="@drawable/blue_button_custom"
                    android:layout_marginRight="15dp" android:layout_marginTop="0dp" android:textColor="#000000"
                    android:textSize="26dp"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="+"
                    android:id="@+id/plus" android:layout_gravity="center" android:layout_weight="1" android:background="@drawable/green_button_custom"
                    android:layout_marginLeft="10dp" android:textColor="#000000" android:textSize="26dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:layout_weight="1" android:layout_marginTop="5dp">
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="0"
                    android:id="@+id/zero" android:layout_weight="1" android:background="@drawable/blue_button_custom"
                    android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginTop="0dp"
                    android:textColor="#000000" android:textSize="26dp"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="("
                    android:id="@+id/opbr" android:layout_gravity="center" android:layout_weight="1" android:background="@drawable/blue_button_custom"
                    android:layout_marginLeft="0dp" android:layout_marginRight="10dp" android:layout_marginTop="0dp"
                    android:textColor="#000000" android:textSize="26dp"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text=")"
                    android:id="@+id/clbr" android:layout_weight="1" android:background="@drawable/blue_button_custom"
                    android:layout_marginRight="15dp" android:layout_marginTop="0dp" android:textColor="#000000"
                    android:textSize="26dp"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="-"
                    android:id="@+id/minus" android:layout_weight="1" android:background="@drawable/green_button_custom"
                    android:layout_marginLeft="10dp" android:textColor="#000000" android:textSize="26dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

