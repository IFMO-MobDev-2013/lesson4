<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="100dp">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tvInput" android:layout_weight="1" android:enabled="false"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tvResult" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="50dp">
        <Button
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="BckSpc"
                android:id="@+id/btBckSpc"
                android:onClick="btBckListener" android:layout_weight="1"/>
        <Button
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="("
                android:id="@+id/btBrOpen"
                android:onClick="btBrOpenListener" android:layout_weight="1"/>
        <Button
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text=")"
                android:id="@+id/btBrClose"
                android:onClick="btBrCloseListener" android:layout_weight="1"/>
        <Button
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="/"
                android:id="@+id/btDiv"
                android:onClick="btDivListener" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="50dp">
        <Button
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="1"
                android:id="@+id/bt1"
                android:onClick="bt1Listener" android:layout_weight="1"/>
        <Button
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="2"
                android:id="@+id/bt2"
                android:onClick="bt2Listener" android:layout_weight="1"/>
        <Button
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="3"
                android:id="@+id/bt3"
                android:onClick="bt3Listener" android:layout_weight="1"/>
        <Button
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="*"
                android:id="@+id/btMult"
                android:onClick="btMultListener" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="50dp">
        <Button
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="4"
                android:id="@+id/bt4"
                android:onClick="bt4Listener" android:layout_weight="1"/>
        <Button
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="5"
                android:id="@+id/bt5"
                android:onClick="bt5Listener" android:layout_weight="1"/>
        <Button
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="6"
                android:id="@+id/bt6"
                android:onClick="bt6Listener" android:layout_weight="1"/>
        <Button
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="-"
                android:id="@+id/btSub"
                android:onClick="btSubListener" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="50dp">
        <Button
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="7"
                android:id="@+id/bt7"
                android:onClick="bt7Listener" android:layout_weight="1"/>
        <Button
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="8"
                android:id="@+id/bt8"
                android:onClick="bt8Listener" android:layout_weight="1"/>
        <Button
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="9"
                android:id="@+id/bt9"
                android:onClick="bt9Listener" android:layout_weight="1"/>
        <Button
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="+"
                android:id="@+id/btSum"
                android:onClick="btSumListener" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="50dp">
        <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="fill"
                android:layout_columnSpan="2"
                android:text="0"
                android:id="@+id/bt0"
                android:onClick="bt0Listener" android:layout_weight="2"/>
        <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="."
                android:id="@+id/btDot"
                android:onClick="btDotListener" android:layout_weight="1"/>
        <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="ะก"
                android:id="@+id/btClr"
                android:onClick="btClrListener" android:layout_weight="1"/>
    </LinearLayout>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="fill_horizontal"
            android:layout_columnSpan="4"
            android:text="="
            android:id="@+id/btRes"
            android:onClick="btResListener" android:layout_weight="1"/>
</LinearLayout>

