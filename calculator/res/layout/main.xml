<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:textColor="#000000"
            android:id="@+id/inputtext" android:textSize="30dp"/>

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#ffff00"
            android:textColor="#000000"
            android:id="@+id/outputtext" android:textSize="30dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        <Button
                android:layout_width="0dp"
                android:layout_weight = "1"
                android:layout_height="wrap_content"

                android:id="@+id/deleteChar" android:layout_column="0" android:background="@drawable/left"/>

        <Button
                android:layout_width="0dp"
                android:layout_weight = "1"
                android:layout_height="wrap_content"
                android:text="C"
                android:id="@+id/clear" android:layout_column="3"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        <Button
                android:layout_width="0dp"
                android:layout_weight = "1"
                android:layout_height="wrap_content"
                android:text="7"
                android:id="@+id/seven" android:layout_column="0" android:layout_gravity="center_horizontal|bottom"/>
        <Button
                android:layout_width="0dp"
                android:layout_weight = "1"
                android:layout_height="wrap_content"
                android:text="8"
                android:id="@+id/eight" android:layout_column="1" android:layout_gravity="center_horizontal|bottom"/>
        <Button
                android:layout_width="0dp"
                android:layout_weight = "1"
                android:layout_height="wrap_content"
                android:text="9"
                android:id="@+id/nine" android:layout_gravity="center_horizontal|bottom"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        <Button
                android:layout_width="0dp"
                android:layout_weight = "1"
                android:layout_height="wrap_content"
                android:text="4"
                android:id="@+id/four" android:layout_column="0"/>
        <Button
                android:layout_width="0dp"
                android:layout_weight = "1"
                android:layout_height="wrap_content"
                android:text="5"
                android:id="@+id/five" android:layout_column="1"/>
        <Button
                android:layout_width="0dp"
                android:layout_weight = "1"
                android:layout_height="wrap_content"
                android:text="6"
                android:id="@+id/six" android:layout_column="2"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        <Button
                android:layout_width="0dp"
                android:layout_weight = "1"
                android:layout_height="wrap_content"
                android:text="1"
                android:id="@+id/one" android:layout_column="0"/>
        <Button
                android:layout_width="0dp"
                android:layout_weight = "1"
                android:layout_height="wrap_content"
                android:text="2"
                android:id="@+id/two" android:layout_column="1"/>
        <Button
                android:layout_width="0dp"
                android:layout_weight = "1"
                android:layout_height="wrap_content"
                android:text="3"
                android:id="@+id/three" android:layout_column="2"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        <Button
                android:layout_width="0dp"
                android:layout_weight = "1"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/zero" android:layout_column="0" android:singleLine="false"/>
        <Button
                android:layout_width="0dp"
                android:layout_weight = "1"
                android:layout_height="wrap_content"
                android:text=","
                android:id="@+id/point" android:layout_column="1"/>
        <Button
                android:layout_width="0dp"
                android:layout_weight = "1"
                android:layout_height="wrap_content"
                android:text="("
                android:id="@+id/openBracket" android:layout_column="2"/>
        <Button
                android:layout_width="0dp"
                android:layout_weight = "1"
                android:layout_height="wrap_content"
                android:text=")"
                android:id="@+id/closeBracket" android:layout_column="3"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        <Button
                android:layout_width="0dp"
                android:layout_weight = "1"
                android:layout_height="wrap_content"
                android:text="+"
                android:id="@+id/plus" android:layout_column="0"/>
        <Button
                android:layout_width="0dp"
                android:layout_weight = "1"
                android:layout_height="wrap_content"
                android:text="-"
                android:id="@+id/minus" android:layout_column="1"/>
        <Button
                android:layout_width="0dp"
                android:layout_weight = "1"
                android:layout_height="wrap_content"
                android:text="*"
                android:id="@+id/mult" android:layout_column="2"/>
        <Button
                android:layout_width="0dp"
                android:layout_weight = "1"
                android:layout_height="wrap_content"
                android:text="/"
                android:id="@+id/div" android:layout_column="3" android:singleLine="false"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        <Button
                android:layout_width="0dp"
                android:layout_weight = "1"
                android:layout_height="wrap_content"
                android:text="="
                android:id="@+id/equal" android:layout_column="0" android:layout_span="2" android:textSize="20dp"/>
    </LinearLayout>
</LinearLayout>

