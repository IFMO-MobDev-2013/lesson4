<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="right"
            android:hint="@string/expressionTextHint"
            android:id="@+id/expText"
            android:singleLine="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="0"
            android:autoText="false"
            android:textSize="25dp"
            android:fontFamily="Times New Roman"
            android:textIsSelectable="true"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:focusableInTouchMode="false"
            android:id="@+id/linearLayout1"
            android:focusable="false"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

        <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/Button7Text"
                android:id="@+id/button7"
                android:layout_weight="1"
                android:textSize="24dp"
                android:textColor="#00FFFF"/>

        <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/Button8Text"
                android:id="@+id/button8"
                android:layout_weight="1"
                android:textSize="24dp"
                android:textColor="#00FFFF"/>

        <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/Button9Text"
                android:id="@+id/button9"
                android:layout_weight="1"
                android:textSize="24dp"
                android:textColor="#00FFFF"/>

        <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/ButtonDivText"
                android:id="@+id/buttonDiv"
                android:layout_weight="1"
                android:textSize="24dp"
                android:textColor="#FF0000"/>

        <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/ButtonDelText"
                android:id="@+id/buttonDel"
                android:layout_weight="1"
                android:textSize="24dp"
                android:textColor="#FF0080"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:id="@+id/linearLayout2"
            android:focusableInTouchMode="false"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

        <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/Button4Text"
                android:id="@+id/button4"
                android:layout_weight="1"
                android:textSize="24dp"
                android:textColor="#00FFFF"
                />

        <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/Button5Text"
                android:id="@+id/button5"
                android:layout_weight="1"
                android:textSize="24dp"
                android:textColor="#00FFFF"/>

        <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/Button6Text"
                android:id="@+id/button6"
                android:layout_weight="1"
                android:textSize="24dp"
                android:textColor="#00FFFF"/>

        <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/ButtonMulText"
                android:id="@+id/buttonMul"
                android:layout_weight="1"
                android:textSize="24dp"
                android:textColor="#0000FF"/>

        <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/ButtonBrText"
                android:id="@+id/buttonBr"
                android:layout_weight="1"
                android:textSize="24dp"
                android:textColor="#FF00FF"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:id="@+id/linearLayout3"
            android:focusableInTouchMode="false"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

        <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/Button1Text"
                android:id="@+id/button1"
                android:layout_weight="1"
                android:textSize="24dp"
                android:textColor="#00FFFF"/>

        <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/Button2Text"
                android:id="@+id/button2"
                android:layout_weight="1"
                android:textSize="24dp"
                android:textColor="#00FFFF"/>

        <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/Button3Text"
                android:id="@+id/button3"
                android:layout_weight="1"
                android:textSize="24dp"
                android:textColor="#00FFFF"/>

        <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/ButtonMinusText"
                android:id="@+id/buttonMinus"
                android:layout_weight="1"
                android:textSize="24dp"
                android:textColor="#FFFF00"/>

        <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/ButtonEraseText"
                android:id="@+id/buttonErase"
                android:layout_weight="1"
                android:textSize="24dp"
                android:textColor="#FF0000"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:focusableInTouchMode="false"
            android:id="@+id/linearLayout4"
            android:focusable="false"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp">

        <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/Button0Text"
                android:id="@+id/button0"
                android:layout_weight="1"
                android:textSize="24dp"
                android:textColor="#00FFFF"/>

        <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/ButtonEqText"
                android:id="@+id/buttonEqu"
                android:layout_weight="2"
                android:textSize="24dp"
                android:textColor="#00FFFF"/>

        <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/ButtonPlusText"
                android:id="@+id/buttonPlus"
                android:layout_weight="1"
                android:textSize="24dp"
                android:textColor="#00FF00"/>

        <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="@string/ButtonDotText"
                android:id="@+id/buttonDot"
                android:layout_weight="1"
                android:textSize="24dp"
                android:textColor="#00FFFF"/>
    </LinearLayout>
</LinearLayout>