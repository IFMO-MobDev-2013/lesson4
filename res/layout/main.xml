<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/editText" android:layout_weight="2" android:autoText="false" android:focusable="false"
            android:textStyle="bold|normal" android:textSize="20dp"
            android:singleLine="true" android:editable="false" android:ellipsize="end" android:gravity="center|right"
            />
    <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp" android:layout_weight="7">
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="0dp" android:layout_weight="5">
            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="C"
                    android:id="@+id/clear" android:layout_column="0" android:layout_weight="1"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="/"
                    android:id="@+id/division" android:layout_column="1" android:layout_weight="1"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="*"
                    android:id="@+id/times" android:layout_column="2" android:layout_weight="1"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="del"
                    android:id="@+id/delete" android:layout_column="3" android:layout_weight="1"/>
        </TableRow>
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="0dp" android:layout_weight="5">
            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="7"
                    android:id="@+id/seven" android:layout_column="0" android:layout_weight="1"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="8"
                    android:id="@+id/eight" android:layout_column="1" android:layout_weight="1"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="9"
                    android:id="@+id/nine" android:layout_column="2" android:layout_weight="1"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="-"
                    android:id="@+id/minus" android:layout_column="3" android:layout_weight="1"/>
        </TableRow>
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="0dp" android:layout_weight="5">
            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="4"
                    android:id="@+id/four" android:layout_column="0" android:layout_weight="1"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="5"
                    android:id="@+id/five" android:layout_column="1" android:layout_weight="1"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="6"
                    android:id="@+id/six" android:layout_column="2" android:layout_weight="1"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="+"
                    android:id="@+id/plus" android:layout_column="3" android:layout_weight="1"/>
        </TableRow>
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="0dp" android:layout_weight="5">
            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="1"
                    android:id="@+id/one" android:layout_column="0" android:layout_weight="1"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="2"
                    android:id="@+id/two" android:layout_column="1" android:layout_weight="1"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="3"
                    android:id="@+id/three" android:layout_column="2" android:layout_weight="1"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="."
                    android:id="@+id/dot" android:layout_column="3" android:layout_weight="1"/>
        </TableRow>
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="0dp" android:layout_weight="5">
            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="0"
                    android:id="@+id/zero" android:layout_column="0" android:layout_weight="1"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="("
                    android:id="@+id/open" android:layout_column="1" android:layout_weight="1"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text=")"
                    android:id="@+id/close" android:layout_column="2" android:layout_weight="1"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="="
                    android:id="@+id/equals" android:layout_column="3" android:layout_weight="1"/>
        </TableRow>
    </TableLayout>
</LinearLayout>

