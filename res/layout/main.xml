<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:id="@id/buttons">


    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:layout_gravity="center" android:autoText="false"
            android:textSize="20dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <Button
                style="@style/button"
                android:text="C"
                android:id="@+id/clearall" android:layout_gravity="center"/>
        <Button
                style="@style/button"
                android:text="CE"
                android:id="@+id/clear" android:layout_gravity="center"/>
        <Button
                style="@style/button"
                android:text="("
                android:id="@+id/lbr"/>
        <Button
                style="@style/button"
                android:text=")"
                android:id="@+id/rbr"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                  android:layout_height="wrap_content" android:id="@+id/linearLayout">
        <Button
                style="@style/button"
                android:text="7" android:id="@+id/n7" android:layout_gravity="center"/>
        <Button
                style="@style/button"
                android:text="8"
                android:id="@+id/n8"/>
        <Button
                style="@style/button"
                android:text="9"
                android:id="@+id/n9"/>
        <Button
                style="@style/button"
                android:text="+"
                android:id="@+id/plus" android:layout_gravity="center_horizontal|bottom"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                  android:layout_height="wrap_content" android:id="@+id/linearLayout1">
        <Button
                style="@style/button" android:text="4"
                android:id="@+id/n4" android:layout_gravity="center"/>
        <Button
                style="@style/button"
                android:text="5"
                android:id="@+id/n5" android:layout_gravity="center_horizontal|top"/>
        <Button
                style="@style/button"
                android:text="6"
                android:id="@+id/n6"/>
        <Button
                style="@style/button"
                android:text="-"
                android:id="@+id/minus"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                  android:layout_height="wrap_content" android:id="@+id/linearLayout2">
        <Button
                style="@style/button" android:text="1"
                android:id="@+id/n1" android:layout_gravity="center"/>
        <Button
                style="@style/button"
                android:text="2"
                android:id="@+id/n2" android:layout_gravity="center"/>
        <Button
                style="@style/button"
                android:text="3"
                android:id="@+id/n3"/>
        <Button
                style="@style/button"
                android:text="*"
                android:id="@+id/mul"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                  android:layout_height="wrap_content" android:id="@+id/linearLayout3">
        <Button
                style="@style/button" android:text="0"
                android:id="@+id/n0" android:layout_gravity="center"/>
        <Button
                style="@style/button"
                android:text="."
                android:id="@+id/ndot"/>
        <Button
                style="@style/button"
                android:text="/"
                android:id="@+id/ndiv" android:layout_gravity="center"/>
        <Button
                style="@style/button"
                android:text="^"
                android:id="@+id/pow" android:layout_gravity="center_horizontal|bottom"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="="
                android:id="@+id/eval" android:layout_gravity="center"/>
    </LinearLayout>
</LinearLayout>

