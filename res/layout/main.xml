<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:id="@+id/textView"
            android:gravity="center"
            android:layout_gravity="center"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_weight="2"
            android:layout_height="wrap_content" android:layout_gravity="center">

        <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="C"
                android:id="@+id/Button_C" android:layout_gravity="center"/>
        <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="&lt;="
                android:id="@+id/Button_del" android:layout_gravity="center"/>
        <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="."
                android:id="@+id/Button_point" android:layout_gravity="center"/>
        <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="="
                android:id="@+id/Button_equally" android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_weight="2"
            android:layout_height="wrap_content" android:layout_gravity="center">

        <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="7"
                android:id="@+id/Button_7" android:layout_gravity="center"/>
        <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="8"
                android:id="@+id/Button_8" android:layout_gravity="center"/>
        <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="9"
                android:id="@+id/Button_9" android:layout_gravity="center"/>
        <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="/"
                android:id="@+id/Button_div" android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_weight="2"
            android:layout_height="wrap_content" android:layout_gravity="center">

        <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="4"
                android:id="@+id/Button_4" android:layout_gravity="center"/>
        <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="5"
                android:id="@+id/Button_5" android:layout_gravity="center"/>
        <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="6"
                android:id="@+id/Button_6" android:layout_gravity="center"/>
        <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="*"
                android:id="@+id/Button_mul" android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_weight="2"
            android:layout_height="wrap_content" android:layout_gravity="center">

        <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="1"
                android:id="@+id/Button_1" android:layout_gravity="center"/>
        <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="2"
                android:id="@+id/Button_2" android:layout_gravity="center"/>
        <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="3"
                android:id="@+id/Button_3" android:layout_gravity="center"/>
        <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="-"
                android:id="@+id/Button_sub" android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_weight="2"
            android:layout_height="wrap_content" android:layout_gravity="center">

        <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="("
                android:id="@+id/Button_left" android:layout_gravity="center"/>
        <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="0"
                android:id="@+id/Button_0" android:layout_gravity="center"/>
        <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text=")"
                android:id="@+id/Button_right" android:layout_gravity="center"/>
        <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="+"
                android:id="@+id/Button_sum" android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>

