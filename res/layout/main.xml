<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <TextView
        android:id="@+id/tv"
        android:layout_margin="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="text">
        </TextView>
    <TableLayout
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:id="@+id/tableLayout1"
            android:layout_margin="15dp">
        <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <Button
                    android:text="C"
                    android:id="@+id/clean"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="45sp"
                    android:layout_weight="1">
            </Button>
            <Button
                    android:text="/"
                    android:id="@+id/div"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textSize="45sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
            </Button>
            <Button
                    android:text="*"
                    android:textStyle="bold"
                    android:textSize="45sp"
                    android:id="@+id/times"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
            </Button>
            <Button
                    android:text="&lt;="
                    android:textStyle="bold"
                    android:textSize="45sp"
                    android:id="@+id/backspace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
            </Button>
        </TableRow>
        <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <Button
                    android:text="7"
                    android:textStyle="bold"
                    android:textSize="45sp"
                    android:id="@+id/seven"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
            </Button>
            <Button
                    android:text="8"
                    android:textStyle="bold"
                    android:textSize="45sp"
                    android:id="@+id/eight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
            </Button>
            <Button
                    android:text="9"
                    android:textStyle="bold"
                    android:textSize="45sp"
                    android:id="@+id/nine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
            </Button>
            <Button
                    android:text="-"
                    android:textStyle="bold"
                    android:textSize="45sp"
                    android:id="@+id/minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
            </Button>
        </TableRow>
        <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <Button
                    android:text="4"
                    android:textStyle="bold"
                    android:textSize="45sp"
                    android:id="@+id/four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
            </Button>
            <Button
                    android:text="5"
                    android:textStyle="bold"
                    android:textSize="45sp"
                    android:id="@+id/five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
            </Button>
            <Button
                    android:text="6"
                    android:id="@+id/six"
                    android:textStyle="bold"
                    android:textSize="45sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
            </Button>
            <Button
                    android:text="+"
                    android:textStyle="bold"
                    android:textSize="45sp"
                    android:id="@+id/plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
            </Button>
        </TableRow>
        <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <Button
                    android:text="1"
                    android:textStyle="bold"
                    android:textSize="45sp"
                    android:id="@+id/one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
            </Button>
            <Button
                    android:text="2"
                    android:textStyle="bold"
                    android:textSize="45sp"
                    android:id="@+id/two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
            </Button>
            <Button
                    android:text="3"
                    android:textStyle="bold"
                    android:textSize="45sp"
                    android:id="@+id/three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
            </Button>
            <Button
                    android:text="="
                    android:textStyle="bold"
                    android:textSize="45sp"
                    android:id="@+id/equal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
            </Button>
        </TableRow>
        <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <Button
                    android:text="0"
                    android:textStyle="bold"
                    android:textSize="45sp"
                    android:id="@+id/zero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
            </Button>
            <Button
                    android:text="."
                    android:textStyle="bold"
                    android:textSize="45sp"
                    android:id="@+id/point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
            </Button>
            <Button
                    android:text="("
                    android:textStyle="bold"
                    android:textSize="45sp"
                    android:id="@+id/bracketsopen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
            </Button>
            <Button
                    android:text=")"
                    android:textStyle="bold"
                    android:textSize="45sp"
                    android:id="@+id/bracketsclose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
            </Button>
        </TableRow>
    </TableLayout>
</LinearLayout>