<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <EditText
            android:id = "@+id/input"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:textSize="@dimen/medium_text"
            android:background="@color/swipe_background"
            android:layout_margin="5dp"
            android:textColor="@color/text_color"

            />

    <TableRow
            android:id="@+id/row0"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
        <ru.marsermd.Swipylator.GUI.SwipeView
                android:id="@+id/b_equals"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:padding="@dimen/swipe_padding"/>
        <TextView
                android:id="@+id/result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/large_text"
                android:layout_gravity="center"
                />

    </TableRow>

    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TableRow
                android:id="@+id/row1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">
            <ru.marsermd.Swipylator.GUI.SwipeView
                    android:id="@+id/b7"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="@dimen/swipe_padding"/>
            <ru.marsermd.Swipylator.GUI.SwipeView
                    android:id="@+id/b8"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="@dimen/swipe_padding"/>
            <ru.marsermd.Swipylator.GUI.SwipeView
                    android:id="@+id/b9"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="@dimen/swipe_padding"/>
            <ru.marsermd.Swipylator.GUI.SwipeView
                    android:id="@+id/b_multiply"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="@dimen/swipe_padding"/>
            <ru.marsermd.Swipylator.GUI.SwipeView
                    android:id="@+id/bC"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="@dimen/swipe_padding"/>
        </TableRow>
        <TableRow
                android:id="@+id/row2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">
            <ru.marsermd.Swipylator.GUI.SwipeView
                    android:id="@+id/b4"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="@dimen/swipe_padding"/>
            <ru.marsermd.Swipylator.GUI.SwipeView
                    android:id="@+id/b5"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="@dimen/swipe_padding"/>
            <ru.marsermd.Swipylator.GUI.SwipeView
                    android:id="@+id/b6"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="@dimen/swipe_padding"/>
            <ru.marsermd.Swipylator.GUI.SwipeView
                    android:id="@+id/b_divide"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="@dimen/swipe_padding"/>
            <ru.marsermd.Swipylator.GUI.SwipeView
                    android:id="@+id/b_erase"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="@dimen/swipe_padding"/>
        </TableRow>
        <TableRow
                android:id="@+id/row3"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">
            <ru.marsermd.Swipylator.GUI.SwipeView
                    android:id="@+id/b1"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="@dimen/swipe_padding"/>
            <ru.marsermd.Swipylator.GUI.SwipeView
                    android:id="@+id/b2"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="@dimen/swipe_padding"/>
            <ru.marsermd.Swipylator.GUI.SwipeView
                    android:id="@+id/b3"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="@dimen/swipe_padding"/>
            <ru.marsermd.Swipylator.GUI.SwipeView
                    android:id="@+id/b_add"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="@dimen/swipe_padding"/>
            <ru.marsermd.Swipylator.GUI.SwipeView
                    android:id="@+id/b_brackets"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="@dimen/swipe_padding"/>
        </TableRow>
        <TableRow
                android:id="@+id/row4"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">
            <ru.marsermd.Swipylator.GUI.SwipeView
                    android:id="@+id/b_left"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="@dimen/swipe_padding"/>
            <ru.marsermd.Swipylator.GUI.SwipeView
                    android:id="@+id/b0"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="@dimen/swipe_padding"/>
            <ru.marsermd.Swipylator.GUI.SwipeView
                    android:id="@+id/b_right"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="@dimen/swipe_padding"/>
            <ru.marsermd.Swipylator.GUI.SwipeView
                    android:id="@+id/b_substract"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="@dimen/swipe_padding"/>
            <ru.marsermd.Swipylator.GUI.SwipeView
                    android:id="@+id/b_dot"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="@dimen/swipe_padding"/>
        </TableRow>
    </TableLayout>

</LinearLayout>

